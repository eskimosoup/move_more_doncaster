<%= form_for @contact, url: contacts_path(anchor: 'contact-form') do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize @contact.errors.count, 'error' %> prevented this message from being sent
      </h2>

      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="contact-details">
    <div class="field">
      <%= f.label :forename %>
      <%= f.text_field :forename %>
    </div>

    <div class="field">
      <%= f.label :surname %>
      <%= f.text_field :surname %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="field">
    <%= f.label :message %>
    <%= f.text_area :message %>
  </div>

  <div class="actions">
    <%= f.submit "Send", class: "submit-button" %>
  </div>
<% end %>
